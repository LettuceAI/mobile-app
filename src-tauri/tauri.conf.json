{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "lettuceai",
  "version": "1.1.0",
  "identifier": "com.lettuceai.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "LettuceAI",
        "width": 1100,
        "height": 720,
        "minHeight": 600,
        "minWidth": 900,
        "transparent": true
      }
    ],
    "security": {
      "csp": null,
      "assetProtocol": {
        "enable": true,
        "scope": ["$APPDATA/**"]
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
      "./feedback_sounds/fail.mp3",
      "./feedback_sounds/send.mp3",
      "./feedback_sounds/success.mp3",
      "./onnxruntime",
      "./onnxruntime/*"
    ]
  }
}
